<div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "cocktail_example.jpg" %>);"">
  <div class="card-category"><%=  cocktail.name %></div>
  <div class="card-description">
    <p> </p>
  </div>
  <div class="card-trash">
    <%= link_to cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } do%>
      <i class="far fa-trash-alt"></i>
      <% end %>
  </div>
  <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>
