<div>
    <p><%= @cocktail.name %></p>
    <% @doses.each do |dose| %>
    <p><%= dose.description %></p>
    <p><%= dose.ingredient.name %></p>
    <%= link_to "destroy the ingredient", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
    <% end %>

    <%= link_to "go back to cocktail list", cocktails_path, class: "btn btn-primary" %>
    <%= link_to "add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    <%= link_to "destroy the cocktail", cocktail_path(@cocktail),
    method: :delete,
    data: { confirm: "Are you sure?" } %>

</div>
